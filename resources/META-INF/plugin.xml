<idea-plugin version="2">
  <id>com.haskforce.frege</id>
  <name>HaskForce >>= Frege</name>
  <version>0.0-SNAPSHOT</version>
  <vendor url="https://github.com/carymrobbins/intellij-frege">HaskForce >>= Frege on GitHub</vendor>

  <description><![CDATA[
    An Attempt at adding Frege functionality to HaskForce.
    ]]></description>

  <change-notes><![CDATA[

    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Frege support -->
    <fileTypeFactory implementation="com.haskforce.frege.lang.FregeFileTypeFactory"/>
    <lang.syntaxHighlighterFactory
        language="Frege"
        implementationClass="com.haskforce.frege.highlighter.FregeSyntaxHighlighterFactory"/>
    <lang.parserDefinition
        language="Frege"
        implementationClass="com.haskforce.frege.lang.parser.FregeParserDefinition"/>

    <!-- Java interop -->
    <java.elementFinder implementation="com.haskforce.frege.lang.java.FregeElementFinder"/>
    <java.shortNamesCache implementation="com.haskforce.frege.lang.java.FregeShortNamesCache"/>

    <!-- Indexes -->
    <stubIndex implementation="com.haskforce.frege.index.FregeAllClassNameIndex"/>
    <stubIndex implementation="com.haskforce.frege.index.FregeQualifiedModuleNameIndex"/>
    <stubIndex implementation="com.haskforce.frege.index.FregeShortModuleNameIndex"/>

    <!-- References -->
    <psi.referenceContributor implementation="com.haskforce.frege.lang.psi.ref.FregeReferenceContributor"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>
